<section>
  <h2>Create a New Card Deck</h2>

  <form class="new-deck-form">
    <div>
      <label for="deck-title">Title</label>
      <input type="text" id="deck-title" name="deck-title" />
    </div>
    <div>
      {{!-- Will need to update this section to edit the cards and not the URL --}}
      <label for="deck-url">Link</label>
      <input id="deck-url" name="deck-url" />
    </div>
    <button type="submit" class="btn">Create</button>
  </form>
</section>

{{#if posts.length}}
<section>
  <h2>Your Decks</h2>
  <ol>
    {{#each posts as |deck|}}
    <li>
      {{> deck-info deck}}
      <a href="/dashboard/edit/{{deck.id}}" class="edit-link">Edit Deck</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/javascript/add-deck.js"></script>