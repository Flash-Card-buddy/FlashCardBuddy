<section>
  <h2>Create a New Card post</h2>

  <form class="new-post-form">
    <div>
      <label for="post-title">Title</label>
      <input type="text" id="post-title" name="post-title" />
    </div>
    <div>
      {{!-- Will need to update this section to edit the cards and not the URL --}}
      <label for="post-url">Link</label>
      <input id="post-url" name="post-url" />
    </div>
    <button type="submit" class="btn">Create</button>
    {{!-- Will need to re-write line 16 to allow search field for friend's email to be searched and then added to their dashboard list --}}
    <input type="text" class="form-control" id="friendId" placeholder="Please enter your friend's email" />
  </form>
</section>

{{#if posts.length}}
<section>
  <h2>Your posts</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit Deck</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>