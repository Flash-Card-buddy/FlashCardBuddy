<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>FCB</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
    integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
  <link rel="icon" href="/favicon.ico" type="image/x-icon">
  <link rel="stylesheet" href="/stylesheets/timeout-dialogue.css">
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<body>
  <div>
    <header class="navbar">
      <h1 class="nav-item">
        <a class="nav-link" href="/">Flash Card Buddy</a>
      </h1>
      <h3 class="nav-item">
        {{#if loggedIn}}
        <a class="nav-link" href="/dashboard">Your Dashboard</a>
      </h3>
      <nav class="nav-link">
        <button id="logout" class="btn btn-primary">logout</button>
        {{else}}
        <a class="btn btn-primary" href="/login">login</a>
        {{/if}}
      </nav>
    </header>
    <main>
      {{{ body }}}
    </main>
    <footer class="nav justify-content-center">
      <p>Y'all come back now, y'hear!</p>
    </footer>
  </div>

  {{#if loggedIn}}
  <script src="/javascript/logout.js"></script>  
  {{/if}}

  <script>
    var status = "front"
    document.querySelector(".flip-card").addEventListener("click", function () {
    if (status === "front") {
        document.querySelector(".flip-card-inner").style="transform: rotateY(180deg)"
        status = "back"
      }
      else {
        document.querySelector(".flip-card-inner").style="transform: rotateY(360deg)"
        status = "front"
      }
      console.log(status)

    })



  </script>
</body>

</html>