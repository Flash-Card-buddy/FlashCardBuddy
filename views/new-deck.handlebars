<section>
  <h2>Create New Deck</h2>

  <form class="new-deck-form">
    <div>
      <label for="deck-title">Title</label>
      <input type="text" id="deck-name" name="deck-name" />
    </div>
    <div>
      <label for="card-front">Front</label>
      <textarea class="card-front" name="card-front" type="text"></textarea> 
    </div>
    <div>
      <label for="card-back">Back</label>
      <textarea class="card-back" name="card-back" type="text"></textarea> 
    </div>    
    <button type="submit" class="btn">Create</button>
  </form>
</section>

<script src="/javascript/add-deck.js"></script>