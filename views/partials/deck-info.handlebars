<article class="deck">
  <div class="title">
    <h2><a href="/deck/{{id}}">{{name}}</a> <span>(created by {{user.username}} on {{format_date created_at}})</span>
    </h2>
    <p>{{deck_name}}</p>
  </div>
  <div class="meta">
    <a href="/deck/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
  </div>
</article>