<section>
  <div>
    {{#each decks }}

    <div id={{position}} class="decker">
      <button data-id={{previousPosition}} class="previous">Prev</button>
      <button data-id={{nextPosition}} class="next">Next</button>
      <div class="flip-card">
        <div class="flip-card-inner">
          <div class="card flip-card-front">
            <div class="card-header">
              
            </div>
            <div class="card-body">
              <p class="card-text"> {{dataValues.card_front}} </p>
            </div>
          </div>
          <div class="card flip-card-back">
            <div class="card-header">
              {{deck_name}}
            </div>
            <div class="card-body">
              <p class="card-text"> {{dataValues.card_back}} </p>
            </div>
          </div>
        </div>
      </div>
      </div>

    {{/each}}
  </div>

</section>

