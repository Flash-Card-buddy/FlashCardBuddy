  crossorigin="anonymous"></script>
<script>


  var position = 0
  var status = "front"


  $(".flip-card").each(function () {
    $(this).on("click", function () {
      if (status === "front") {
        $(".flip-card-inner").attr("style", "transform: rotateY(180deg)")
        status = "back"
      }
      else {
        $(".flip-card-inner").attr("style", "transform: rotateY(360deg)")
        status = "front"
      }
      console.log(status)

    })
  })




  $(".next").on("click", function () {

    let next = parseInt($(this).attr("data-id"))
    $("#" + next).show()
    
    next = next - 1
    $("#" + next).hide()

    
  })

  $(".previous").on("click", function () {

    let previous = parseInt($(this).attr("data-id"))
    previous = previous - 1
    $("#" + previous).show()
    
    previous = previous + 1
    $("#" + previous).hide()

    
  })


  //Will be in charge of switching card status from hide to show
  function display(value) {
    $(".decker").each(function (index) {

      console.log(index, value)
      if (index > value) {
        $(this).hide()
      }
      else {
        $(this).show()
      }
    })

  }

  display(0)

</script>